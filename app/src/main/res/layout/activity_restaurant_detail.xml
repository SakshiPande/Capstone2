<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RestaurantDetailActivity"
    >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_res"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder"
            />
        <Button
            android:id="@+id/button_favorite"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/iv_res"
            android:text="Add to Favorites"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_favorite"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/tv_cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@android:color/darker_gray"
            />
        <TextView
            android:id="@+id/tv_user_rating_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cuisine"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="User Rating"
            />
        <TextView
            android:id="@+id/tv_user_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_rating_txt"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/tv_avg_cost_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_rating"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Average Cost:"
            />
        <TextView
            android:id="@+id/tv_avg_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_avg_cost_txt"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            />


    </RelativeLayout>
</ScrollView>

